{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KYC Credential Schema",
  "description": "Schema for a KYC Credential",
  "type": "object",
  "properties": {
    "name": {
      "type": "object",
      "properties": {
        "familyName": {
          "type": "string"
        },
        "givenName": {
          "type": "string"
        },
        "additionalName": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "birthDate": {
      "type": "string",
      "format": "date-time"
    },
    "postalAddress": {
      "type": "object",
      "properties": {
        "addressCountry": {
          "type": "string"
        },
        "addressLocality": {
          "type": "string"
        },
        "addressRegion": {
          "type": "string"
        },
        "postalCode": {
          "type": "number"
        },
        "streetAddress": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "telephone": {
      "type": "string"
    },
    "taxId": {
      "type": "string"
    },
    "nationality": {
      "type": "string"
    },
    "gender": {
      "type": "string"
    },
    "accountType": {
      "type": "string"
    },
    "purposeOfAccount": {
      "type": "string"
    },
    "occupation": {
      "type": "string"
    },
    "employerName": {
      "type": "string"
    },
    "sourceOfFunds": {
      "type": "string"
    },
    "accountActivity": {
      "type": "string"
    }
  },
  "additionalProperties": false
}