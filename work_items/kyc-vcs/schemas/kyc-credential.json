{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KYC Credential Schema",
  "description": "Schema for a KYC Credential",
  "type": "object",
  "properties": {
    "name": {
      "type": "object",
      "properties": {
        "familyName": {
          "type": "string"
        },
        "givenName": {
          "type": "string"
        },
        "additionalName": {
          "type": "string"
        }
      },
      "required": ["familyName", "givenName"],
      "additionalProperties": false
    },
    "birthDate": {
      "type": "string"
    },
    "postalAddress": {
      "type": "object",
      "properties": {
        "addressCountry": {
          "type": "string"
        },
        "addressLocality": {
          "type": "string"
        },
        "addressRegion": {
          "type": "string"
        },
        "postOfficeBoxNumber": {
          "type": "string"
        },
        "streetAddress": {
          "type": "string"
        }
      },
      "required": ["addressCountry", "addressLocality", "addressRegion", "streetAddress"],
      "additionalProperties": false
    },
    "taxId": {
      "type": "string"
    },
    "nationality": {
      "type": "string"
    },
    "gender": {
      "type": "string"
    },
    "accountType": {
      "type": "string"
    },
    "purposeOfAccount": {
      "type": "string"
    },
    "occupation": {
      "type": "string"
    },
    "employerName": {
      "type": "string"
    },
    "sourceOfFunds": {
      "type": "string"
    },
    "accountActivity": {
      "type": "string"
    }
  },
  "required": ["name", "birthDate", "postalAddress", "taxId", "nationality", "gender", "accountType", "purposeOfAccount", "occupation", "employerName", "sourceOfFunds", "accountActivity"],
  "additionalProperties": false
}