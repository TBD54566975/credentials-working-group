{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Address Verification Evidence",
  "description": "Evidence for an address verification result",
  "type": "object",
  "properties": {
    "companyName": {
      "type": "string"
    },
    "statement": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "date": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "account": {
      "type": "object",
      "properties": {
        "balance": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "customer": {
      "type": "object",
      "properties": {
        "names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "postalAddress": {
          "type": "object",
          "properties": {
            "addressCountry": {
              "type": "string"
            },
            "addressLocality": {
              "type": "string"
            },
            "addressRegion": {
              "type": "string"
            },
            "postOfficeBoxNumber": {
              "type": "string"
            },
            "streetAddress": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}